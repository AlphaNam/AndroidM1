<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<!--
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
-->
    <ImageView
        android:id="@+id/image_view"
        android:layout_width="301dp"
        android:layout_height="241dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/main_image_removebg_preview" />
<!--android:layout_below="@id/toolbar"-->


    <Button
        android:id="@+id/button_new_match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="423dp"
        android:onClick="launch_new_match_form"
        android:text="@string/nouveau_match"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="559dp" />

    <Button
        android:id="@+id/button_last_matchs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"
        android:layout_centerVertical="true"

        android:text="@string/matchs_precedents"
        tools:layout_editor_absoluteX="119dp"
        tools:layout_editor_absoluteY="619dp"
        android:layout_below="@id/button_new_match"/>

</RelativeLayout>