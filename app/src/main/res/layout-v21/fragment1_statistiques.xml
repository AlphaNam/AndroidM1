<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:weightSum="1.4">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7">

            <TextView
                android:id="@+id/tv_score_nomj1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="#D3D3D3"
                android:drawableEnd="@drawable/ic_fiber_manual_record_black_24dp"
                android:drawableRight="@drawable/ic_fiber_manual_record_black_24dp"
                android:gravity="center"
                android:text="@string/joueur_1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_score_jeu1_j1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/no_score" />

            <TextView
                android:id="@+id/tv_score_jeu2_j1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#D3D3D3"
                android:gravity="center"
                android:text="@string/no_score"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_score_jeu3_j1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/no_score"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_null_j1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#D3D3D3"
                android:gravity="center"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7">

            <TextView
                android:id="@+id/tv_score_nomj2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="#D3D3D3"
                android:drawableEnd="@drawable/ic_fiber_manual_record_black_24dp"
                android:drawableRight="@drawable/ic_fiber_manual_record_black_24dp"
                android:gravity="center"
                android:text="@string/joueur_2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_score_jeu1_j2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/no_score" />

            <TextView
                android:id="@+id/tv_score_jeu2_j2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#D3D3D3"
                android:gravity="center"
                android:text="@string/no_score"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_score_jeu3_j2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/no_score"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_null_j2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#D3D3D3"
                android:gravity="center"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7.6"
        android:fillViewport="true">

<!--        <fragment
            android:id="@+id/fragment"
            android:name="fr.android.tennistracker.FragmentTableauScorePlusDetailles"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />-->

        <FrameLayout
            android:id="@+id/frame_layout_score_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </FrameLayout>
    </ScrollView>

</LinearLayout>